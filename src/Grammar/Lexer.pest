IF = { "if" }
ELSE = { "else" }
SWITCH = { "switch" }
CASE = { "case" }
DEFAULT = { "default" }
COLON = ${ ":" }
BREAK = { "break" }
OPEN_PARENTHESES = { "(" }
CLOSE_PARENTHESES = { ")" }
PARENTHESES = { OPEN_PARENTHESES | CLOSE_PARENTHESES }
OPEN_BRACES = { "{" }
CLOSE_BRACES = { "}" }
BRACES = { OPEN_BRACES | CLOSE_BRACES }
COMMA = { ";" }
CONDITIONAL = { "==" | "!=" | "<=" | ">=" | "<" | ">"}
OPERATOR = { "*" | "/" | "+" | "-" }
UNARY = { "++" | "--" }
ATTRIBUTION = { "+=" | "-=" | "*=" | "/=" | "=" }

END = { "$end$" }

INT = @{ ASCII_DIGIT+ }
FLOAT = @{ ASCII_DIGIT+ ~ ("." | ",") ~ ASCII_DIGIT+ }
NUM = @{ FLOAT | INT ~ &(WHITESPACE | COMMA | PARENTHESES | BRACES) }
STRING = { PUSH("\'" | "\"") ~ (!("\'" | "\"") ~ ANY)* ~ POP }
TYPE = @{ ("char" | "int" |  "float") ~ &WHITESPACE }
IDENTIFIER = @{ !(IF | ELSE) ~ (("_" | ASCII_ALPHA) ~ (ASCII_ALPHANUMERIC | "_")*) }
ERROR = @{ (!(NEWLINE | WHITESPACE | COMMA | BRACES | PARENTHESES) ~ ANY)+ }

TOKEN = _{ (END | SWITCH | CASE | BREAK | (DEFAULT | IDENTIFIER | INT | FLOAT | STRING) ~ COLON | DEFAULT | IF | ELSE | OPEN_PARENTHESES | CLOSE_PARENTHESES | OPEN_BRACES | CLOSE_BRACES | TYPE | IDENTIFIER | CONDITIONAL | UNARY | ATTRIBUTION | OPERATOR | NUM | COMMA | STRING | ERROR)* ~ &EOI }

WHITESPACE = _{ NEWLINE | " " | "\t" }
// NEWLINE = _{ "\r\n" | "\r" | "\n" }
WHITE_SPACE = _{ " " | "\t" }
COMMENT = _{ ("/*" ~ (!"*/" ~ ANY)* ~ "*/") | ("//" ~ (!(NEWLINE | EOI) ~ ANY)*) }

