IF = @{ "IF" }
ELSE = @{ "ELSE" }
SWITCH = @{ "SWITCH" }
CASE = { "CASE" }
COLON = { "COLON" }
BREAK = { "BREAK" }
DEFAULT = { "DEFAULT" }
ID = { "IDENTIFIER" }
CONDITIONAL = { "CONDITIONAL" }
ATTRI = { "ATTRIBUTION" }
COMMA = { "COMMA" }
NUM = { "NUM" }
INT = { "INT" }
FLOAT = { "FLOAT" }
CHAR = { "CHAR" }
STRING = { "STRING" }
OPERATOR = { "OPERATOR" }
UNARY = { "UNARY" }
OPEN_PARENTHESES = { "OPEN_PARENTHESES" }
CLOSE_PARENTHESES = { "CLOSE_PARENTHESES" }
OPEN_BRACES = { "OPEN_BRACES" }
CLOSE_BRACES = { "CLOSE_BRACES" }
NUMERIC_TYPE = { INT | FLOAT }

VARIABLE = { (NUMERIC_TYPE ~ ID ~ ATTRI ~ (EXPR | NUM)) | (CHAR ~ ID ~ ATTRI ~ STRING) }
CONDITION = _{ (ID | NUM) ~ CONDITIONAL ~ (ID | NUM)}
EXPR = { (ID | NUM) ~ (OPERATOR) ~ (ID | NUM) }

IF_CALL = { CONDITION ~ &EOI }
SWITCH_CALL = { ID ~ &EOI}
CASE_BODY = { ( (CASE ~ (INT | FLOAT | STRING) ~ COLON)+ | DEFAULT ~ COLON ) ~ &EOI }

COMMAND = { (VARIABLE | (ID ~ ATTRI ~ (STRING | EXPR | NUM)) | BREAK) ~ COMMA ~ &EOI}

WHITESPACE = _{ " " | "\t" }

